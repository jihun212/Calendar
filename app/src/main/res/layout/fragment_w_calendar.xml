<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <GridView
                android:id="@+id/wCalendarGridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:numColumns="7"
                android:layout_weight="1"

                android:background="@color/white"
                android:horizontalSpacing="1dp"
                android:verticalSpacing="50dp"
                android:listSelector="#00ffff"/>
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:text="0"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:text="1"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:text="2"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:text="3"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:text="4"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:text="5"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:text="6"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:text="7"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:text="8"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:text="9"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:text="10"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:text="11"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:text="12"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:text="13"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:text="14"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:text="15"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:text="16"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:text="17"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:text="18"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:text="19"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:text="20"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:text="21"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:text="22"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:text="23"/>

            </GridLayout>

            <GridView
                android:id="@+id/wCalendarGridView_week"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:numColumns="7"
                android:layout_weight="1"
                android:background="@color/black"
                android:horizontalSpacing="2dp"
                android:verticalSpacing="2dp"
                android:listSelector="#00ffff"
                android:drawSelectorOnTop="true"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>


